<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AccountProfile">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/background_light"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:weightSum="100"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:src="@drawable/ic_archive_button"
                android:padding="18dp" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="60"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:src="@drawable/ic_settings_button"
                android:padding="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".25"
            android:background="#000000">
        </LinearLayout>
        <!--User details and Storyboard Layout-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:orientation="vertical"
            android:weightSum="100">
            <!--User details-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:orientation="horizontal"
                android:weightSum="100">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20" />
                <!--User's edit profile button and follower/following ratio count-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="80"
                    android:weightSum="100"
                    android:orientation="vertical">

                    <!--User's follower ratio-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="50"
                        android:weightSum="100"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/posts_count"
                            android:text="0"
                            android:textColor="#000"
                            android:textAlignment="center"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="33.33333333333"/>
                        <TextView
                            android:id="@+id/followers_count"
                            android:text="0"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="33.33333333333"/>
                        <TextView
                            android:text="0"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:id="@+id/following_count"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="33.33333333333"/>
                    </LinearLayout>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="50"
                        android:textColor="#000"
                        android:textAlignment="center"
                        android:text="@string/edit_profile"
                        android:onClick="edit_profile_button"
                        android:background="@drawable/rounded_edit_text"
                        />

                </LinearLayout>
            </LinearLayout>
            <!--User's storyboard-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50">
            </LinearLayout>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="60">

        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".25"
            android:background="#000000"></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="horizontal"
            android:weightSum="100">

            <ImageView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:src="@drawable/ic_mini_house"
                android:padding="15dp"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:src="@drawable/ic_mag_glass"
                android:padding="15dp"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:src="@drawable/ic_times_square"
                android:padding="15dp"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:src="@drawable/ic_insta_heart"
                android:padding="15dp"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:padding="20dp"
                />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>